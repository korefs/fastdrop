{
  "name": "fastdrop",
  "version": "1.1.2",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && NODE_ENV=development electron dist/main/main.js",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc --project tsconfig.electron.json",
    "build:preload": "tsc --project tsconfig.preload.json",
    "postinstall": "npm run build:preload",
    "electron": "electron dist/main/main.js",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "release": "npm run build && electron-builder --publish=always",
    "release:mac": "npm run build && electron-builder --mac --publish=always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Fast file upload utility for macOS menu bar",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/publisher-github": "^7.8.3",
    "@types/form-data": "^2.2.1",
    "@types/node": "^24.3.0",
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.6.2",
    "form-data": "^4.0.4",
    "googleapis": "^157.0.0",
    "lucide-react": "^0.541.0",
    "node-fetch": "^3.3.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "build": {
    "appId": "com.fastdrop.app",
    "productName": "FastDrop",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "type": "development"
    },
    "publish": {
      "provider": "github",
      "owner": "korefs",
      "repo": "fastdrop"
    }
  }
}
