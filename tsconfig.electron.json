{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist/main",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/main.ts",
    "src/preload.ts"
  ]
}